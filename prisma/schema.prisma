model User {
  id            String       @default(cuid()) @id
  test          Int
  name          String?
  email         String?   @unique
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  @@map(name: "users")
}

model Issue {
  id          String @default(cuid()) @id
  slug        String @unique@default("")

  time        String
  cover       String
  description String
  pdf         String?
  published   Boolean @default(false)

  articles    Article[]
}

model Article {
  id          String @default(cuid()) @id
  slug        String @unique@default("")
  
  title       String
  content     String
  published   Boolean @default(false)

  issue       Issue @relation(fields: [issueId], references: [id])   
  issueId     String
  authors     Person[]
  topics      Topic[]
}

model Topic {
  id          String @default(cuid()) @id
  slug        String @unique@default("")

  name        String
  description String

  articles    Article[]
}

model Person {
  id          String @default(cuid()) @id
  slug        String @unique@default("")

  name        String
  title       String
  description String
  gradYear    Int
  isExec      Boolean @default(false)
  image       String?

  articles    Article[]
}